---
interface Props {
  title: string;
  img: string;
  list: string[];
}

const { title, img, list } = Astro.props as Props;
---

<article class="bg-white/20 rounded-xl shadow-xl border p-6">
  <img src={img} alt={title} class="aspect-square w-36 rounded-full mx-auto border-4 border-white/30">
  <h3 class="uppercase font-black text-white mt-2">{title}</h3>
  <hr class="border-white/50 mx-8 border-2 rounded-3xl bg-transparent my-3">
  <ul class="flex flex-col gap-4 text-left leading-snug text-primary-50">
    {list.map(item => (
      <li>{item}</li>
    ))}
  </ul>
</article>
