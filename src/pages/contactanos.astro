---
import GradientTitle from "../components/GradientTitle.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Contactanos">
  <main class="max-w-screen-xl mt-24 px-4 pt-4 pb-10 mx-auto">
    <GradientTitle class="font-bold text-5xl lg:text-7xl uppercase mb-4">
      ¡Contactanos ahora!
    </GradientTitle>
    <p class="text-lg font-medium text-primary-800">
      Estamos aquí para ayudarte con tus proyectos y responder a tus preguntas.
      No dudes en ponerte en contacto con nosotros de la forma que prefieras.
      ¡Estamos listos para asistirte!
    </p>
    <section class="grid grid-cols-1 lg:grid-cols-3">
      <form class="col-span-2 sm:grid grid-cols-2 p-4 rounded-xl gap-2">
        <div>
          <label for="">Nombre</label>
          <input type="text" placeholder="Luis Zabaleta Pacora" />
        </div>
        <div>
          <label for="">Telefono</label>
          <input type="tel" placeholder="936 036 026" />
        </div>
        <div>
          <label for="">Correo</label>
          <input type="text" placeholder="nombre@ejemplo.com" />
        </div>
        <div>
          <label for="">Asunto</label>
          <input type="text" />
        </div>
        <div class="col-span-2">
          <label for="">Comentario</label>
          <textarea class="min-h-52" name="" id=""></textarea>
        </div>
        <button
          class="bg-primary col-span-2 w-fit px-4 py-2 text-white rounded text-xl ml-auto"
          type="submit">Enviar</button
        >
      </form>
      <aside class="flex flex-col gap-4 justify-center">
        <article>
          <h3>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="currentColor"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M18.364 4.636a9 9 0 0 1 .203 12.519l-.203 .21l-4.243 4.242a3 3 0 0 1 -4.097 .135l-.144 -.135l-4.244 -4.243a9 9 0 0 1 12.728 -12.728zm-6.364 3.364a3 3 0 1 0 0 6a3 3 0 0 0 0 -6z"
              ></path></svg
            >
            Visitanos
          </h3>
          <p>
            Lima, Villa el Salvador <br /> Asoc. California II Etapa <br /> Mz H1
            Lote 14
          </p>
        </article>
        <article>
          <h3>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="currentColor"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M22 7.535v9.465a3 3 0 0 1 -2.824 2.995l-.176 .005h-14a3 3 0 0 1 -2.995 -2.824l-.005 -.176v-9.465l9.445 6.297l.116 .066a1 1 0 0 0 .878 0l.116 -.066l9.445 -6.297z"
              ></path><path
                d="M19 4c1.08 0 2.027 .57 2.555 1.427l-9.555 6.37l-9.555 -6.37a2.999 2.999 0 0 1 2.354 -1.42l.201 -.007h14z"
              ></path></svg
            >
            Correo
          </h3>
          <p>lcglass@lcglassysoluciones.com</p>
        </article>
        <article>
          <h3>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="currentColor"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M9 3a1 1 0 0 1 .877 .519l.051 .11l2 5a1 1 0 0 1 -.313 1.16l-.1 .068l-1.674 1.004l.063 .103a10 10 0 0 0 3.132 3.132l.102 .062l1.005 -1.672a1 1 0 0 1 1.113 -.453l.115 .039l5 2a1 1 0 0 1 .622 .807l.007 .121v4c0 1.657 -1.343 3 -3.06 2.998c-8.579 -.521 -15.418 -7.36 -15.94 -15.998a3 3 0 0 1 2.824 -2.995l.176 -.005h4z"
              ></path></svg
            >
            Celular
          </h3>
          <p>+ 943 264 873</p>
        </article>
      </aside>
    </section>
    <hr />
    <section>
      <!-- mapa -->
    </section>
  </main>
</Layout>

<style>
  label {
    @apply block font-semibold;
  }
  input,
  textarea {
    @apply w-full placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease-linear focus:outline-none focus:border-slate-400 hover:border-slate-300 shadow-sm focus:shadow;
  }
  article {
    @apply bg-white border rounded-2xl p-4 text-center;
    & h3 {
      @apply text-accent font-bold uppercase flex items-end mb-4 justify-center;
    }
    & p {
      @apply text-primary-700 font-medium;
    }
  }
</style>
